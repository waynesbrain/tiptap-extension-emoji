{
  "name": "tiptap-extension-emoji",
  "description": "emoji extension for tiptap",
  "version": "3.7.0",
  "homepage": "https://github.com/waynesbrain/tiptap-extension-emoji",
  "keywords": [
    "tiptap",
    "tiptap extension"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/waynesbrain/tiptap-extension-emoji"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.ts"
      },
      "import": "./dist/index.js"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc -b && vite build",
    "generate": "tsx ./scripts/generate.ts && prettier --write ./src/data.ts",
    "format": "prettier --write \"./src/**/*.{css,js,jsx,scss,ts,tsx}\" \"./scripts/**/*.{css,js,jsx,scss,ts,tsx}\"",
    "lint": "eslint .",
    "lint-ts": "tsc -b --noEmit --pretty",
    "preview": "vite preview",
    "start": "vite build --watch"
  },
  "peerDependencies": {
    "@tiptap/core": "^3.7.0",
    "@tiptap/pm": "^3.7.0",
    "@tiptap/suggestion": "^3.7.0"
  },
  "dependencies": {
    "emoji-regex": "^10.4.0",
    "emojibase-data": "^15",
    "is-emoji-supported": "^0.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@tiptap/core": "^3.7.0",
    "@tiptap/pm": "^3.7.0",
    "@tiptap/suggestion": "^3.7.0",
    "@types/node": "^22",
    "emoji-datasource": "^7.0.2",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "json5": "^2.2.3",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.1.5",
    "vite-plugin-dts": "^4.5.4"
  },
  "prettier": {
    "trailingComma": "all",
    "proseWrap": "always"
  }
}
